<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/allquestions.css">
<link rel="stylesheet" href="/css/top-navbar.css">
<link rel="stylesheet" href="/css/table.css">
</head>

<body>
<%- include('includes/navigation.ejs') %>

<main>
    <h1 class = "landing_title"> Questions Per Keyword</h1>
    <div>
        <% if (quest.length > 0) { %>
        <table class="table-fill">
            <thead>
            <tr>
                <th class="text-left">Keyword</th>
                <th class="text-left">Number of Questions Found</th>
            </tr>
            </thead>
            <tbody class="table-hover">

            <% for(let i=0; i<quest.length; i++) { %>
            <tr>
                <td class="text-left"><%=quest[i] %>  </td>
                <td class="text-left"> <%=counts[i] %>  </td>
            </tr>

            <% }%>
            <% }
            else{ %>
                <h2> No questions yet!</h2>
            <% }%>
        </table>
    </div>

</main>

<%- include('includes/end.ejs') %>