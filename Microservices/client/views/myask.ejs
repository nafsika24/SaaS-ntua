<body>
<%- include('includes/navigation.ejs') %>

<main>
    <h1 class = "landing_title"> MyAskMeAnything</h1>
    <div class="row_my">

        <div class="column_my">
            <div class="flip-card">
                <h3 >Question!</h3>
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img  src="../css/question.png " alt="Avatar" class = "images">
                    </div>
                    <div class="flip-card-back">
                        <a href= "/newquestion">
                            <button class="button_flip" type="submit">Click here to Ask a Question</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="column_my">
            <div class="flip-card">
                <h3 >Answer!</h3>
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img  src="../css/answer.png " alt="Avatar" class = "images">
                    </div>
                    <div class="flip-card-back">
                        <a href= "/newanswer">
                            <button class="button_flip" type="submit">Click here to Answer a Question</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="column_my">
            <div class="flip-card">
                <h3 > My Contributions per Day!</h3>
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img  src="../css/mycontribution.png " alt="Avatar" class = "images">
                    </div>
                    <div class="flip-card-back">
                        <a href= "/mycontrib">
                            <button class="button_flip" type="submit">Click here to see Your Contributions</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row_my">

        <div class="column_my">

            <div class="flip-card">
                <h3 >My Questions!</h3>
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img  src="../css/myquestion.png " alt="Avatar" class = "images">
                    </div>
                    <div class="flip-card-back">
                        <a href= "/myquestions">
                            <button class="button_flip" type="submit">Click here to see Your Questions</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="column_my">
            <div class="flip-card">
                <h3 > My Answers!</h3>
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img  src="../css/myanswer.png " alt="Avatar" class = "images">
                    </div>
                    <div class="flip-card-back">
                        <a href= "/myanswers">
                            <button class="button_flip" type="submit">Click here to see Your Answers</button>
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</main>

